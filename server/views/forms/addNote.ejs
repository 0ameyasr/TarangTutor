<div class="container mt-5">
    <h1 class="mb-4">Add Note</h1>
    <form action="/notes" method="POST">
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input type="text" class="form-control" id="title" name="title" required>
      </div>
      <div class="mb-3">
        <label for="content" class="form-label">Content</label>
        <textarea class="form-control" id="content" name="content" rows="5"></textarea>
      </div>
      <div class="mb-3">
        <label for="noteLink" class="form-label">Note Link</label>
        <input type="text" class="form-control" id="noteLink" name="noteLink">
      </div>
      <!-- <div class="mb-3">
        <label for="chapter" class="form-label">Chapter</label>
        <input type="text" class="form-control" id="chapter" name="chapter" placeholder="Chapter ID">
      </div> -->
      
      <button type="submit" class="btn btn-primary">Add Note</button>
    </form>
  </div>
  