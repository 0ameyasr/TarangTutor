<div class="container mt-5">
    <h1 class="mb-4">Edit Chapter</h1>
    <form action="/chapters/<%= chapterId %>" method="POST">
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input type="text" class="form-control" id="title" name="title" value="<%= chapter.title %>" required>
      </div>
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea class="form-control" id="description" name="description" rows="3"><%= chapter.description %></textarea>
      </div>
      <!-- Other fields for chapter-related data can be added here -->
      
      <button type="submit" class="btn btn-primary">Update Chapter</button>
    </form>
  </div>
  